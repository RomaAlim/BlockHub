Cheats:
// Применение градиента к фону someView
        if let gradientColor = UIView.createGradientBackground() {
            someView.backgroundColor = gradientColor
        }
        
        // Применение градиента к тексту someLabel
        if let gradientColor = UIView.createGradientBackground() {
            someLabel.textColor = gradientColor
        }
